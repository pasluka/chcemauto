    <tr>Zrýchlenie(0-100km/h): <%= @version.engine.accel %> s </tr><br>
    <tr>Spotreba:
        <td>Mesto: <%= @version.engine.consucity %> l/100 km</td>
        <td>Mimomesto: <%= @version.engine.consuextra %> l/100 km</td>
        <td>Kombinované: <%= @version.engine.counsucomb %> l/100 km</td>
    </tr>
  </table>

